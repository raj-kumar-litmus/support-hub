{
  "name": "support-hub",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development vite",
    "staging": "NODE_ENV=staging vite",
    "prod": "NODE_ENV=production vite",
    "build": "tsc && vite build",
    "postcss": "postcss src/index.css --no-map --dir public",
    "postcss:watch": "postcss src/index.css --no-map --dir public --watch",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint-fix": "eslint src --fix",
    "preview": "vite preview --port 3000",
    "test": "jest test --coverage",
    "test:single": "jest src/pages/__test__/assignStyle.test.js",
    "prepare": "husky install && chmod ug+x .husky/*",
    "postinstall": "npm run prepare"
  },
  "browserslist": [
    "last 2 versions",
    "last 2 Chrome versions",
    "not dead",
    ">1%"
  ],
  "eslintIgnore": [
    "node_modules/*",
    "coverage/*"
  ],
  "jest": {
    "automock": false,
    "clearMocks": true,
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "testEnvironment": "jsdom",
    "coverageThreshold": {
      "global": {
        "lines": 100,
        "functions": 100,
        "branches": 100
      }
    },
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "ts-jest",
      "^.+\\.svg$": "<rootDir>/svgTransform.cjs"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/.*/__mocks__"
    ]
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "dotenv": "^16.3.1",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.11.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.15",
    "@babel/core": "^7.22.17",
    "@babel/preset-env": "^7.22.15",
    "@babel/preset-typescript": "^7.22.15",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.1",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "babel-jest": "^29.5.0",
    "cssnano": "^6.0.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "faker": "^5.5.3",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-fetch-mock": "^3.0.3",
    "postcss": "^8.4.23",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.0.3",
    "react-test-renderer": "^18.2.0",
    "react-testing-library": "^8.0.1",
    "tailwindcss": "^3.3.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
